<h1>
  <%= link_to "home", entries_path %>: tags
  <%= inline_button "add", new_tag_path %>
</h1>

<ul id="tags">
  <% @tags.each do |tag| %>
    <li>
      <%= tag.name %> (<%= tag.entries.count %>)
      <%= link_to "view", tag %>
      <%= link_to "edit", edit_tag_path(tag) %>
    </li>
  <% end %>
</ul>
