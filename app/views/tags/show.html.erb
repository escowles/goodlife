<p style="color: green"><%= notice %></p>

<h1>
  <%= link_to "home", entries_path %>:
  <%= link_to "tags", tags_path %>:
  <%= @tag.name %> |
  <%= link_to "edit", edit_tag_path(@tag) %> |
  <%= link_to "delete", @tag, method: :delete %>
</h1>

<%= render @tag %>

<h2>entries</h2>
<ul>
  <% @entries.each do |e| %>
    <li><%= link_to e.name, entry_path(e) %></li>
  <% end %>
</ul>
