<div id="<%= dom_id entry %>">
  <p>
    <strong>Type:</strong>
    <%= link_to entry.type.name, type_path(entry.type) %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= entry.name %>
  </p>

  <p>
    <strong>Date:</strong>
    <%= entry.date %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= entry.description %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= location_search(entry.location) %>
  </p>

  <p>
    <strong>People:</strong>
    <%= people_links(entry.people) %>
  </p>

  <p>
    <strong>Tags:</strong>
    <%= tag_links(entry.tags) %>
  </p>

</div>
