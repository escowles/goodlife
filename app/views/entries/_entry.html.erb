<div id="<%= dom_id entry %>">
  <p>
    <strong>Type:</strong>
    <%= link_to entry.type.name, type_path(entry.type) %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= entry.name %>
  </p>

  <p>
    <strong>Date:</strong>
    <%= entry.date %>
  </p>

  <p>
    <strong>End Date:</strong>
    <%= entry.end_date %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= entry.description %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= location_search(entry.location) %>
  </p>

  <p>
    <strong>People:</strong>
    <ul>
      <% @entry_people.each do |ep| %>
        <li><%= link_to(ep.person.name, person_path(ep.person)) %>
            <%= inline_button("x", entry_person_path(ep), :delete) %></li>
      <% end %>
    </ul>
  </p>

  <p>
    <strong>Keywords:</strong>
    <ul>
      <% entry.keywords_to_list.each do |kw| %>
        <li><%= link_to(kw, entries_path(keyword: kw)) %></li>
      <% end %>
    </ul>
  </p>

  <p>
    <strong>Tags:</strong>
    <ul>
      <% @entry_tags.each do |et| %>
        <li><%= link_to(et.tag.name, tag_path(et.tag)) %>
            <%= inline_button("x", entry_tag_path(et), :delete) %></li>
      <% end %>
    </ul>
  </p>

</div>
