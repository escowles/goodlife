<p style="color: green"><%= notice %></p>

<%= render @entry %>

<div>
  <%= link_to "Edit this entry", edit_entry_path(@entry) %> |
  <%= link_to "Back to entries", entries_path %>

  <%= button_to "Destroy this entry", @entry, method: :delete %>
</div>

<%= form_with(model: EntryPerson) do |form| %>
  <%= form.hidden_field :entry_id, value: @entry.id %>
  <div>
    <%= form.collection_select :person_id, Person.all.order(:name), :id, :name %>
    <%= form.submit "add person" %>
  </div>
<% end %>

<%= form_with(model: EntryTag) do |form| %>
  <%= form.hidden_field :entry_id, value: @entry.id %>
  <div>
    <%= form.collection_select :tag_id, Tag.all.order(:name), :id, :name %>
    <%= form.submit "add tag" %>
  </div>
<% end %>
